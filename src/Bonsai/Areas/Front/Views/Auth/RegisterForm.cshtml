@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Bonsai.Areas.Front.ViewModels.Auth
@model Bonsai.Areas.Front.ViewModels.Auth.RegisterUserVM
@{
    ViewBag.Title = "Registration";
    ViewBag.DisableSearch = true;
    Layout = "~/Areas/Front/Views/Layout.cshtml";

    var data = (RegisterUserDataVM) ViewBag.Data;
}

<div class="content text">
    <h1>Registration</h1>

    <p>To create an account, please enter the required information.</p>
    @if (data.IsFirstUser)
    {
        <p>Your account will receive administrator rights.</p>
    }
    else
    {
        <p>Make sure that you have entered up-to-date information - in Russian and without errors.</p>
        <p>Your account will be reviewed by an administrator, after which you will be able to log in and use the system.</p>
    }

    <div class="row">
        <div class="col-md-7 col-sm-12">
            <form asp-action="Register" method="post" style="margin-top: 32px">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label form-label-required">Surname</label>
                    <div class="col-sm-9">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label form-label-required">First Name</label>
                    <div class="col-sm-9">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label form-label-required">Middle Name</label>
                    <div class="col-sm-9">
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label form-label-required">Date of Birth</label>
                    <div class="col-sm-6">
                        <input asp-for="Birthday" class="form-control datepicker datepicker-strict" placeholder="YYYY.MM.DD" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label form-label-required">E-mail</label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                @if (data.UsePasswordAuth)
                {
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label form-label-required">Password</label>
                        <div class="col-sm-9">
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label form-label-required">Repeat Password</label>
                        <div class="col-sm-9">
                            <input asp-for="PasswordCopy" class="form-control" type="password" />
                            <span asp-validation-for="PasswordCopy" class="text-danger"></span>
                        </div>
                    </div>
                }

                @if (data.IsFirstUser)
                {
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label form-label-required">Options</label>
                        <div class="col-sm-9">
                            <div class="form-check">
                                <input asp-for="CreatePersonalPage" class="form-check-input" />
                                <label asp-for="CreatePersonalPage" class="form-check-label">Create personal page</label>
                                <span asp-validation-for="CreatePersonalPage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Error:</strong> please, make sure the input is correct and try again.
                    </div>
                }

                <div class="form-group row">
                    <div class="offset-sm-3 col-sm-6">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
